# MCP Server Configuration

# Required: Service authentication token (must match backend/.env)
SERVICE_AUTH_TOKEN=your-secret-service-token-here

# Required: Base URL of FastAPI backend
FASTAPI_BASE_URL=http://localhost:8000

# Optional: Logging configuration
MCP_LOG_LEVEL=INFO

# Optional: MCP server HTTP port
MCP_SERVER_PORT=3000

# Optional: Backend request timeout (seconds)
BACKEND_TIMEOUT=30.0

# Optional: Backend request retry count
BACKEND_MAX_RETRIES=2
