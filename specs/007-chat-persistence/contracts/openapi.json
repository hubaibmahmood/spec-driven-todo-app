{
  "openapi": "3.1.0",
  "info": {
    "title": "Chat Persistence API",
    "version": "1.0.0",
    "description": "API for persistent chat history and conversation management. Foundation for OpenAI Agents SDK integration (spec 008). Currently returns echo responses; will be enhanced with AI in future specs."
  },
  "paths": {
    "/api/chat": {
      "post": {
        "summary": "Send a message and persist to database (returns echo response in spec 007)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" },
                  "conversation_id": { "type": "integer", "nullable": true }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message saved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "conversation_id": { "type": "integer" },
                    "response": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/conversations": {
      "get": {
        "summary": "List all conversations for the authenticated user",
        "responses": {
          "200": {
            "description": "List of conversations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "title": { "type": "string" },
                      "updated_at": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/conversations/{id}": {
      "get": {
        "summary": "Get full message history for a conversation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversation messages",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "title": { "type": "string" },
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "role": {
                            "type": "string",
                            "enum": ["user", "assistant", "tool"],
                            "description": "Message role (OpenAI-compatible)"
                          },
                          "content": { "type": "string" },
                          "metadata": {
                            "type": "object",
                            "nullable": true,
                            "description": "Optional: tool_calls, tool_call_id for OpenAI integration"
                          },
                          "created_at": { "type": "string", "format": "date-time" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
